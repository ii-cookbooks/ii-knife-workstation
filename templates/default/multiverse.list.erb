deb http://<%= node['ec2']['placement_availability_zone'].chop %>.ec2.archive.ubuntu.com/ubuntu/ precise multiverse
deb-src http://<%= node['ec2']['placement_availability_zone'].chop %>.ec2.archive.ubuntu.com/ubuntu/ precise multiverse
deb http://<%= node['ec2']['placement_availability_zone'].chop %>.ec2.archive.ubuntu.com/ubuntu/ precise-updates multiverse
